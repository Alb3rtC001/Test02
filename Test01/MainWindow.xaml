            <Image Source="./img/ajustesIcon.png" Height="34" Width="34" Stretch="Uniform"/>
        </Button>
        <Button Name="onfoBtn"/>
        <Button Name="upImgBtn"/>
        <Button Name="startBtn" Content="Start" RenderTransformOrigin="9.893,9" Canvas.Left="243" Canvas.Top="139"/>
        <Button Name="scoreBtn" Content="Score" RenderTransformOrigin="4,7.4" Canvas.Left="153" Canvas.Top="139"/>
    </Canvas>
</Window>
